@{
    ViewBag.Title = "Đăng nhập";
}

<main class="main">
    <div style="display: flex; align-items: center; justify-content: center;">
        <form class="login-form" action="~/Auth/Login" method="post">
            @Html.AntiForgeryToken()
            <h3 class="mb-5 text-center">Đăng nhập</h3>

            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="typeEmailX-2">Email</label>
                <input name="username" type="text" id="typeEmailX-2" class="form-control form-control-lg" />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="typePasswordX-2">Password</label>
                <input name="password" type="password" id="typePasswordX-2" class="form-control form-control-lg" />
            </div>
            @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Đăng nhập</button>
            <div>
                <p class="text-center">
                    Bạn chưa có tài khoản? <a href="~/Auth/Register">Đăng ký ngay</a>
                </p>
            </div>
        </form>
    </div>
</main>