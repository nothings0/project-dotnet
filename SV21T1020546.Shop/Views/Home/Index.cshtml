@model SV21T1020546.Shop.Models.HomeModel
@{
    ViewBag.Title = "Trang chủ";
}

<div class="main">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="https://lh3.googleusercontent.com/4xQ6ZW-CjmJrTF_Sm9_KfnCv8KHfshJECNL1EOIYYqdJ1AexvKbxZZwV-kuZmeVfygjRp9nyqHRxsas_UiLf2sIpuEsHLwa8=w1920-rw" alt="Los Angeles" style="width:100%;">
            </div>

            <div class="item">
                <img src="https://lh3.googleusercontent.com/FTil0Tc7gVBb4rYXkRbcOtN1M5BtZKEC7vrZffAP4G16JacB8-JC34nKDYqQg35T-e2OeeSboXZa-AvtASnVrTTWEeSzl2mr6Q=w1920-rw" alt="Chicago" style="width:100%;">
            </div>

            <div class="item">
                <img src="https://lh3.googleusercontent.com/vvhtiH67Rf6LTWmmFMwr7lrWYrPBUb7Iv3CVTAvHTop6rKtnp6CSqkLF4Bjw0ifh9zXdrhNO_v_j7Ms12-CDpLMM_Kv8Btv1VA=w1920-rw" alt="New york" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!-- Feadtued Categories -->

<div class="categories">
    <div class="small-container">
        <div class="row">
            <div class="col-4 category_item">
                <i class="fa fa-truck"></i>
                <div>
                    <h4>Miễn phí vận chuyển</h4>
                    <p>Đơn đầu tiên freeship</p>
                </div>
            </div>
            <div class="col-4 category_item">
                <i class="fa fa-gift"></i>
                <div>
                    <h4>Ưu đãi mỗi ngày</h4>
                    <p>Ưu đãi lên tới 20%</p>
                </div>
            </div>
            <div class="col-4 category_item">
                <i class="fa fa-phone"></i>
                <div>
                    <h4>Hỗ trợ 24/7</h4>
                    <p>Hỗ trợ người dùng 24/7</p>
                </div>
            </div>
            <div class="col-4 category_item">
                <i class="fa fa-shield"></i>
                <div>
                    <h4>Bảo mật thanh toán</h4>
                    <p>Thanh toán được bảo vệ 100%</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Products -->

<div class="small-container">
    <h2 class="title">Mới ra mắt</h2>
    <div class="grid" style="margin-bottom: 20px;">
        @foreach (var item in Model.FeaturedProducts)
        {
        <div class="col-4">
            <a href="/ProductDetail/Index/@item.ProductID">
                <div class="product_image">
                    <img src="@(string.IsNullOrEmpty(item.Photo)
    ? "http://localhost:45443/images/products/nophoto.png"
    : $"http://localhost:45443/images/products/{item.Photo}")"
                         style="width:100%" alt="" />
                </div>
                <div class="product_desc">
                    <h4>@item.ProductName</h4>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                    </div>
                    <p>@item.Price.ToString("#,##0")</p>
                </div>
            </a>
        </div>
        }
    </div>
    <h2 class="title">Sản phẩm bán chạy</h2>
    <div class="grid" style="margin-bottom: 20px;">
        @foreach (var item in Model.LatestProducts)
        {
        <div class="col-4">
            <a href="/ProductDetail/Index/@item.ProductID">
                <div class="product_image">
                    <img src="@(string.IsNullOrEmpty(item.Photo)
    ? "http://localhost:45443/images/products/nophoto.png"
    : $"http://localhost:45443/images/products/{item.Photo}")"
                         style="width:100%" alt="" />
                </div>
                <div class="product_desc">
                    <h4>@item.ProductName</h4>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star-o"></i>
                    </div>
                    <p>@item.Price.ToString("#,##0")</p>
                </div>
            </a>
        </div>
        }
    </div>
</div>