@model SV21T1020546.DomainModels.Employee
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Employee/Save" class="form-horizontal" method="post" enctype="multipart/form-data">
            <input type="hidden" name="@nameof(Model.EmployeeID)" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên: @Html.ValidationMessage(nameof(Model.FullName), new { @style = "color:#f00" })</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.FullName)" value="@Model.FullName" autofocus />
                    
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh: @Html.ValidationMessage(nameof(Model.BirthDate), new { @style = "color:#f00" })</label>
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" name="@nameof(Model.BirthDate)" value="@Model.BirthDate" />
                    <input type="text" class="form-control date-picker" name="_birthDate" value="@Model.BirthDate?.ToString("dd/MM/yyyy")" />
                    @Html.ValidationMessage("ERROR_BIRTHDATE", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email: @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email" />
                    @Html.ValidationMessage("InvalidEmail", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="@nameof(Model.IsWorking)" value="true" checked="@Model.IsWorking" /> Nhân viên đang làm việc
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <img id="Photo" style="width:200px" class="profile-user-img img-responsive img-bordered"
                         src="@(string.IsNullOrEmpty(Model.Photo) ? Url.Content("~/themes/dist/img/user.jpg") : Url.Content($"~/images/employees/{Model.Photo}"))" />
                     </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>