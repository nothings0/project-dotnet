@model SV21T1020546.DomainModels.Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Employee/Delete/@Model.EmployeeID">

            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.FullName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.BirthDate?.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Address</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(Model.IsWorking ? "Tài khoản đang làm việc" : "Tài khoản đã nghỉ việc")</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" style="width:200px" class="profile-user-img img-responsive img-bordered"
                         src="@(string.IsNullOrEmpty(Model.Photo) ? Url.Content("~/themes/dist/img/user.jpg") : Url.Content($"~/images/employees/{Model.Photo}"))" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (!SV21T1020546.BusinessLayers.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <button type="submit" class="btn-danger"><i class="fa fa-floppy-o"></i>Xóa dữ liệu</button>
                    }
                    <a href="/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>