@model SV21T1020546.Web.Models.ProductSearchInput
@{
    ViewBag.Title = "Quản lý mặt hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <!-- Form đầu vào tìm kiếm -->
        <form id ="frmSearchInput" action="~/Product/Search" method="get">
            <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />
            <div class="row">
                <div class="col-sm-3" style="padding: 0 5px 0 15px;">
                    <label>Loại hàng:</label>
                    <select class="form-control" name="@nameof(Model.CategoryID)">
                        <option value="">-- Chọn loại hàng --</option>
                        @foreach (var item in SV21T1020546.BusinessLayers.CommonDataService.ListOfCategories(out int x))
                        {
                            if (item.CategoryID == Model.CategoryID)
                            {
                                <option value="@item.CategoryID" selected>@item.CategoryName</option>
                            }
                            else
                            {
                                <option value="@item.CategoryID">@item.CategoryName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-3" style="padding: 0 5px;">
                    <label>Nhà cung cấp:</label>
                    <select class="form-control" name="@nameof(Model.SupplierID)">
                        <option value="">-- Chọn nhà cung cấp --</option>
                        @foreach (var item in SV21T1020546.BusinessLayers.CommonDataService.ListOfSuppliers(out int x))
                        {
                            if (item.SupplierID == Model.SupplierID)
                            {
                                <option value="@item.SupplierID" selected>@item.SupplierName</option>
                            }
                            else
                            {
                                <option value="@item.SupplierID">@item.SupplierName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-1" style="padding: 0 5px;">
                    <label>Giá từ:</label>
                    <input type="text" class="form-control number-separator" name="@nameof(Model.MinPrice)" value="@Model.MinPrice">
                </div>
                <div class="col-sm-1" style="padding: 0 5px;">
                    <label>đến:</label>
                    <input type="text" class="form-control number-separator" name="@nameof(Model.MaxPrice)" value="@Model.MaxPrice">
                </div>
                <div class="col-sm-4" style="padding: 0 15px 0 5px;">
                    <label>Tên mặt hàng cần tìm:</label>
                    <div class="input-group">
                        <input name="@nameof(Model.SearchValue)" value="@Model.SearchValue" type="text" class="form-control" placeholder="Nhập mặt hàng hàng cần tìm" autofocus="">
                        <div class="input-group-btn">
                            <button class="btn btn-info" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                            <a href="/Product/Create" class="btn btn-primary" style="margin-left:5px">
                                <i class="fa fa-plus"></i> Bổ sung
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <div id="searchResult">
        </div>
    </div>
</div>

@section scripts {
    <script>
        function doSearch(page) {
            var searchCondition = $("#frmSearchInput").serializeArray();
            searchCondition.push({ name: "page", value: page });

            var action = $("#frmSearchInput").prop("action");
            var method = $("#frmSearchInput").prop("method");
            $.ajax({
                url: action,
                type: method,
                data: searchCondition,
                success: function (data) {
                    $("#searchResult").html(data);
                }
            });
        };
        $(document).ready(function () {
            var a = @Model.Page
                doSearch(a);
            $("#frmSearchInput").submit(function (e) {
                e.preventDefault();
                doSearch(1);
            })
        });
    </script>
}