@model SV21T1020546.Web.Models.CategorySearchResult
@{
    Layout = null;
}

<p style="margin: 10px 0 10px 0">
    Có <b>@Model.RowCount</b> loại hàng trong tổng số <b>@Model.PageCount</b> trang
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Tên Ngành Hàng</th>
                <th>Mô tả</th>
                <th style="width: 80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td class="text-right">
                        <a class="btn btn-xs btn-info" href="~/Category/Edit/@item.CategoryID">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-xs btn-danger" href="~/Category/Delete/@item.CategoryID"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <ul class="pagination">
        @for (int p = 1; p <= Model.PageCount; p++)
        {
            if (p == Model.Page)
            {
                <li class="active"><a href="#">@p</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="doSearch(@p)">@p</a></li>
            }
        }
    </ul>
</div>