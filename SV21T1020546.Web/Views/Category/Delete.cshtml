@model SV21T1020546.DomainModels.Category

@{
    ViewBag.Title = "Xóa loại hàng";
}

<div class="box box-body">
    <div class="box-body">
        <form action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label>Tên ngành hàng:</label>
                <p class="form-control-static form-control">@Model.CategoryName</p>
            </div>
            <div class="form-group">
                <label>Mô tả:</label>
                <p class="form-control-static form-control">@Model.Description</p>
            </div>

            <div class="form-group text-right">
                @if (!SV21T1020546.BusinessLayers.CommonDataService.InUsedCategory(Model.CategoryID))
                {
                    <button type="submit" class="btn-danger"><i class="fa fa-floppy-o"></i>Xóa dữ liệu</button>
                }
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>